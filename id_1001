#include<iostream>
using namespace std;
int main(){
    int b,sum=0;
    while(cin>>b){
        for(int i=1;i<=b;i++){
            sum+=i;
        }
        cout<<sum<<endl<<endl;
        sum=0;
    }
    return 0;
}
